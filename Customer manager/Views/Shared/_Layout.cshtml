<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Filip Kubat Customer Manager</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar bg-dark fixed-top ">
        <div class="container">
            <div class="navbar-header">
                <h2 class="text-white justify-content-center">Strings to leet speak translator 1.0</h2>
            </div>
            <div class="btn-group" role="group">
                <div class="btn btn-success" @*onclick="location.href='@Url.Action("Index")'"*@>Add customers</div>
                <div class="btn btn-success" @*onclick="location.href='@Url.Action("PreviousTranslations", "Home", new { filteredResults ="" })'"*@>Customers</div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <div class="container body-content centered">
        @RenderBody()
    </div>
    <footer class="page-footer font-small blue ">
        <div class="footer-copyright text-center py-3">
            Created by Filip Kubat with <text style="color:red;">♥</text>
        </div>
    </footer>
</body>
</html>